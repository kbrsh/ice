function findAlias(alias, list) {
  var key = void 0,
      val = void 0;
  if (/\./.test(alias)) {
    val = (0, _toHost2.default)(alias);
    key = 'alias';
  } else {
    val = alias;
    key = 'uid';
  }

  var _alias = list.find(function (d) {
    if (d[key] === val) {
      if (debug) console.log('> [debug] matched alias ' + d.uid + ' by ' + key + ' ' + val);
      return true;
    }

    // match prefix
    if (val + '.now.sh' === d.alias) {
      if (debug) console.log('> [debug] matched alias ' + d.uid + ' by url ' + d.host);
      return true;
    }

    return false;
  });

  return _alias;
}